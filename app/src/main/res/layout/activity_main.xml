<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.solvworth.crest.MainActivity"
    android:clickable="false"
    android:focusable="false">

    <Button
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:text="PLAY"
        android:id="@+id/play"
        android:background="@drawable/button"
        android:textSize="25dp"
        android:padding="2dp"
        android:textColor="#ffffff"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="171dp" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/play"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="20dp"
        android:id="@+id/linearLayout">

        <Button
            style="?android:attr/buttonStyleSmall"
            android:layout_width="match_parent"
            android:layout_height="27dp"
            android:text="Highscores"
            android:textSize="12sp"
            android:focusable="@bool/ddd"
            android:enabled="@bool/ddd"
            android:clickable="@bool/ddd" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:text="Scores database is empty"
            android:id="@+id/none"
            android:gravity="center" />

        <ListView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/scores" />
    </LinearLayout>

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:id="@+id/sound"
        android:src="@drawable/sound_on"
        android:layout_alignTop="@+id/play"
        android:layout_alignRight="@+id/linearLayout"
        android:layout_alignEnd="@+id/linearLayout" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="A production of Solvworth Corporation"
        android:id="@+id/textView4"
        android:gravity="center"
        android:textStyle="italic"
        android:textColor="@color/fourth"
        android:layout_alignParentEnd="true"
        android:layout_below="@+id/textView5"
        android:layout_alignParentRight="true" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="CREST"
        android:gravity="center"
        android:typeface="sans"
        android:textSize="45dp"
        android:textColor="@color/second"
        android:id="@+id/textView5"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="53dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceSmall"
        android:text="Developer: Sunesis"
        android:id="@+id/textView6"
        android:gravity="center"
        android:typeface="sans"
        android:textStyle="normal"
        android:textColor="@color/colorPrimaryDark"
        android:layout_below="@+id/textView4"
        android:layout_alignParentRight="true" />

</RelativeLayout>
